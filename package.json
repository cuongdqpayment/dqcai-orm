{
  "name": "@dqcai/orm",
  "version": "1.0.1",
  "type": "module",
  "description": "A powerful, multi-database TypeScript ORM library supporting PostgreSQL, MySQL, MariaDB, SQLite, SQL Server, and MongoDB.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.mjs",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "browser": "./lib/index.umd.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./lib/index.d.ts"
      ]
    }
  },
  "files": [
    "lib",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "obfuscate": "node ./scripts/obfuscate.mjs",
    "prepublishOnly": "npm run clean && npm run build && npm run obfuscate",
    "release": "npm publish --access public",
    "release:patch": "tsx scripts/release.ts patch",
    "release:minor": "tsx scripts/release.ts minor",
    "release:major": "tsx scripts/release.ts major"
  },
  "keywords": [
    "orm",
    "database",
    "typescript",
    "postgresql",
    "mysql",
    "mariadb",
    "sqlite",
    "sqlserver",
    "mongodb",
    "query-builder",
    "adapter",
    "multi-database"
  ],
  "author": "Đoàn Quốc Cường",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cuongdqpayment/dqcai-orm.git"
  },
  "bugs": {
    "url": "https://github.com/cuongdqpayment/dqcai-orm/issues"
  },
  "homepage": "https://github.com/cuongdqpayment/dqcai-orm#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mssql": "^9.1.8",
    "@types/node": "^18.0.0",
    "@types/oracledb": "^6.9.1",
    "@types/pg": "^8.15.5",
    "better-sqlite3": "^9.0.0",
    "esbuild": "^0.25.9",
    "javascript-obfuscator": "^4.1.1",
    "mariadb": "^3.0.0",
    "mongodb": "^6.0.0",
    "mssql": "^12.0.0",
    "mysql2": "^3.0.0",
    "oracledb": "^6.0.0",
    "pg": "^8.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.49.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "glob": "^11.0.3",
    "rimraf": "^6.0.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@dqcai/logger": "^2.1.0"
  },
  "peerDependencies": {
    "better-sqlite3": "^9.0.0",
    "mariadb": "^3.0.0",
    "mongodb": "^6.0.0",
    "mssql": "^12.0.0",
    "mysql2": "^3.0.0",
    "oracledb": "^6.0.0",
    "pg": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    },
    "mariadb": {
      "optional": true
    },
    "mysql2": {
      "optional": true
    },
    "mongodb": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    },
    "oracledb": {
      "optional": true
    },
    "mssql": {
      "optional": true
    }
  }
}
